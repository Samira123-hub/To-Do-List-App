{% extends 'base.html.twig' %}

{% block title %}My Tasks{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/mytasks.css') }}">
{% endblock %}

{% block body %}
    <div class="sidebar">
        <!-- Profile Image -->
        <div class="profile-container">
            <a href="{{ path('app_profil') }}">
            {% if user.image %}
                <img src="{{ asset('uploads/profiles/' ~ user.image) }}" alt="Profile Picture" class="profile-img">
            {% else %}
                <img src="{{ asset('images/emptyprofilimage.png') }}" alt="Profile Picture" class="profile-img">
            {% endif %}
            </a>
            <p><b>{{user.username}}</b></p>
        </div>

        <ul class="sidebar-links">
            <li><a href="{{ path('app_add_task') }}">Add Task</a></li>
            <li><a href="{{ path('app_my_tasks') }}">My Tasks</a></li>
            <li><a href="{{ path('app_finished_tasks') }}">Tasks Done</a></li>
            <li><a href="{{ path('app_logout') }}">Log out</a></li>

        </ul>
    </div>
    <main>
        <div class="main-container">
            <h2>Top priority</h2>
            <div class="tasks-container">
                {% for task in tasks %}
                    {% if task.priority == 1 and not task.isCompleted %}
                        <div class="task-container" data-task-id="{{ task.id }}">
                            <h3>{{ task.title }}</h3>
                            <b>{{ task.duration }}</b>
                            <p>{{ task.description }}</p>
                            <button id="done{{ task.id }}" class="done">Done</button>
                            <button id="remove{{ task.id }}" class="remove">Remove</button>
                            <a href="{{ path('task_update', {'id': task.id}) }}">
                                <img src="{{ asset('images/crayon.png') }}" alt="edit task" height="15px" width="15px" class="edit-icon">
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="main-container">
            <h2>Medium priority</h2>
            <div class="tasks-container">
                {% for task in tasks %}
                    {% if task.priority == 2 and not task.isCompleted %}
                        <div class="task-container" data-task-id="{{ task.id }}">
                            <h3>{{ task.title }}</h3>
                            <b>{{ task.duration }}</b>
                            <p>{{ task.description }}</p>
                            <button id="done{{ task.id }}" class="done">Done</button>
                            <button id="remove{{ task.id }}" class="remove">Remove</button>
                            <a href="{{ path('task_update', {'id': task.id}) }}">
                                <img src="{{ asset('images/crayon.png') }}" alt="edit task" height="15px" width="15px" class="edit-icon">
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="main-container">
            <h2>Bottom priority</h2>
            <div class="tasks-container">
                {% for task in tasks %}
                    {% if task.priority == 3 and not task.isCompleted %}
                        <div class="task-container" data-task-id="{{ task.id }}">
                            <h3>{{ task.title }}</h3>
                            <b>{{ task.duration }}</b>
                            <p>{{ task.description }}</p>
                            <button id="done{{ task.id }}" class="done">Done</button>
                            <button id="remove{{ task.id }}" class="remove">Remove</button>
                            <a href="{{ path('task_update', {'id': task.id}) }}">
                                <img src="{{ asset('images/crayon.png') }}" alt="edit task" height="15px" width="15px" class="edit-icon">
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </main>

    {% block javascripts %}
    <script src="{{ asset('JS/doneRemoveTaskScript.js') }}"></script>
    {% endblock %}
{% endblock %}
